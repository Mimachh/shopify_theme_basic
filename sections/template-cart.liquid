{% if cart.item_count > 0 %}
  <div
    class="p-4">
    <div
      class="max-w-6xl flex flex-col my-10 mx-auto">
      <div
        class="flex items-end justify-between my-5">
        <h1
          class="text-3xl">Your cart</h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="text-blue-600 hover:text-blue-800 font-medium underline">Continue shopping</a>
      </div>
    </div>

    <div
      class="max-w-6xl flex flex-col my-10 mx-auto">
      <form
        action="{{ routes.cart_url }}"
        method="POST"
        novalidate>
        <table
          class="table-auto divide-y divide-gray-200 my-4 w-full">
          <th
            class="px-6 py-3 text-left text-sm font-medium text-metal">Product</th>
          <th
            class="px-6 py-3 text-left text-sm font-medium text-metal">Quantity</th>
          <th
            class="px-6 py-3 text-left text-sm font-medium text-metal">Total Price</th>
          <tbody
            class="">
            {% for item in cart.items %}
              <tr
                class="table-row">
                <td
                  class="py-4 px-2 flex flex-col justify-center">
                  <a
                    href="{{ item.url }}">
                    {% if item.image %}
                      <img
                        src="{{ item.image | img_url: 'small' }}"
                        alt="{{ item.title | escape }}"
                        class="w-20 h-20 object-cover border">
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                    {% endif %}
                  </a>
                </td>
                <td
                  class="py-4 px-2 flex flex-col justify-center">
                  <a
                    href="{{ item.url }}"
                    class="my-1">{{ item.product.title | truncatewords: 5 }}
                  </a>
                  <span
                    class="text-sm text-metal my-1">{{ item.variant.title }}</span>
                  <a
                    href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                    class="text-sm font-medium text-red-500 my-1">remove</a>
                </td>
                <td
                  class="py-4 px-2">
                  <input
                    type="number"
                    class="w-20 border p-2"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="update-{{ forloop.index }}">
                </td>
                <td
                  class="py-4 px-2">
                  {{ item.line_price | money_with_currency }}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <div
          class="flex flex-col md:flex-row items-center justify-center">
          <div
            class="w-full my-4">
            <div
              class="flex flex-col items-start">
              <label
                for="cart_notes"
                class="my-1 font-medium">Cart notes</label>
              <textarea
                name="note"
                id="cart_notes"
                class="w-full md:max-w-lg resize-none border h-20"></textarea>
            </div>
          </div>
          <div
            class="w-full my-4 md:w-80">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'subtotal' %}
                <h3
                  class="text-xl">Subtotal: {{ cart.total_price | money_with_currency }}</h3>
                {% when 'update_button' %}
                <div
                  class="my-4 bg-dark rounded-xl relative z-0 group">
                  <button
                    name="update"
                    type="submit"
                    class="w-full p-3 border border-dark bg-light text-dark font-medium rounded-xl transitionAll hoverTranslate">Update</button>
                </div>
                {% when 'checkout_button' %}
                <div
                  class="my-4 bg-dark rounded-xl relative z-0 group">
                  <button
                    name="checkout"
                    type="submit"
                    class="relative z-1 rounded-xl w-full p-3 border bg-silver border-dark text-dark font-medium transitionAll hoverTranslate">Checkout</button>
                </div>
            {% else %}

              {% endcase %}
            {% endfor %}



          </div>
        </div>
      </form>

    </div>
  </div>
{% else %}
  <div
    class="max-w-6xl mx-auto h-[80vh] flex items-center justify-center">
    <div
      class="text-center">
      <h1
        class="text-3xl my-4">
        Your cart is empty
      </h1>
      <div
        class="my-4 py-4 ">
        <div
          class="mx-auto bg-dark block w-fit h-fit rounded-xl group relative border-none transitionAll">
          <a
            href="{{ routes.all_products_collection_url }}"
            class="border block border-dark transitionAll font-medium text-dark bg-light group-hover:translate-y-[-5px] group-hover:translate-x-[-5px] py-2 px-4 md:py-3 md:px-6 rounded-xl">Continue shopping</a>

        </div>
      </div>

    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Template Cart",
    "blocks": [
      {
        "type": "subtotal",
        "name": "Subtotal",
        "limit": 1
      }, {
        "type": "update_button",
        "name": "Update Button",
        "limit": 1
      }, {
        "type": "checkout_button",
        "name": "Checkout Button",
        "limit": 1
      }
    ]
  }
{% endschema %}