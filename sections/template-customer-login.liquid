<div
  class="flex items-center justify-center py-12 px-6 md:px-4 lg:px-8 bg-red-600">
  <div
    class="max-w-md  w-full space-y-8 ">
    <div>
      <h1
        class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div
      class="mt-8">
      {% form 'customer_login' %}
        <div
          class="my-2">
          <label
            for="email_address"
            class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            placeholder="Email address"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border">
        </div>

        {% if form.password_needed %}
          <div
            class="my-2">
            <label
              for="password"
              class="sr-only">Password</label>
            <input
              type="password"
              name="customer[password]"
              placeholder="Password"
              id="email_address"
              autocomplete="current-password"
              class="relative block w-full px-3 py-2 border">
          </div>
        {% endif %}

        <div
          class="w-full h-fit bg-dark rounded-2xl group">
          <button
            type="submit"
            class="relative rounded-2xl w-full py-2 px-4 hoverTranslate transitionAll text-sm font-medium text-light bg-metal">Sign in</button>
        </div>
      {% endform %}
    </div>
  </div>
  <div
    class="max-w-md w-full space-y-8"></div>
</div>

<div
  class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div
    class="relative sm:max-w-xl sm:mx-auto">
    <div
      class="absolute inset-0 translate-x-[6px] translate-y-[6px]  shadow-lg transform bg-dark rounded-2xl"></div>
    <div
      class="relative px-4 py-10 bg-white shadow-lg rounded-2xl sm:p-20  border border-dark">
      <div
        class="max-w-md mx-auto">
        <div>
          <h1
            class="text-2xl font-semibold">Sign in to your account</h1>
        </div>
        {% form 'customer_login' %}
          <div
            class="divide-y divide-gray-200">
            <div
              class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <div
                class="relative">
                <input
                  type="email"
                  name="customer[email]"
                  placeholder="Email address"
                  id="email_address"
                  autocomplete="email"
                  class="h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" />
                <label
                  for="email"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm transition-all peer-focus:-top-3.5">Email Address</label>
              </div>
              {% if form.password_needed %}
                <div
                  class="relative">
                  <input
                    type="password"
                    name="customer[password]"
                    placeholder="Password"
                    id="email_address"
                    autocomplete="current-password"
                    class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600">
                  <label
                    for="password"
                    class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password</label>
                </div>
              {% endif %}
              <div
                class="w-full h-fit bg-dark rounded-2xl group">
                <button
                  type="submit"
                  class="relative rounded-2xl w-full py-2 px-4 hoverTranslate transitionAll text-sm font-medium text-light bg-metal">Sign in</button>
              </div>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>