{% assign main_menu_linklist = linklists[section.settings.menu].links %}


<div
  class="bg-white">
  <div
    class="relative mx-auto max-w-[1400px] px-4 lg:px-8">
    <div
      class="mx-auto px-4 sm:px-6">
      <div class="flex justify-between items-center py-4 lg:justify-start lg:space-x-10">
        <!-- STORE NAME / STORE LOGO -->
        <div
          class="flex lg:justify-start lg:flex-1 truncate">
          <h1
            class="text-lg lg:text-xl font-bold truncate">{{ section.settings.desktop_menu_title }}</h1>
        </div>
        <div
          class="-mr-2 -my-2 ml-3 lg:hidden">
          <button
            type="button"
            class="p-2 inline-flex items-center lg:justify-center focus:outline-none"
            id="navMobileMenuButton">
            {% render 'icon-menu' %}
          </button>
        </div>
        <!-- NAVIGATION MENU -->
        <nav
          class="hidden lg:flex space-x-10">
          {% for link in main_menu_linklist %}
            {% if link.links != blank %}
              <div
                class="relative">
                <button
                  type="button"
                  class="dropdown-button inline-flex items-center text-base text-gray-500 hover:text-gray-900"
                  data-dropdown-button-id="{{ forloop.index }}">
                  {{ link.title }}
                  {% render 'icon-dropdown' %}
                </button>

                <div
                  class="dropdown-content hidden absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
                  data-dropdown-id="{{ forloop.index }}">
                  <div
                    class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                    <div
                      class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                      {% for childlink in link.links %}
                        <a
                          href="{{ childlink.url }}"
                          class="-m-3 p-3 flex items start rounded-lg 
                          hoverLink
                          {% if childlink.active == true %}
                            activeLink
                          {% endif %}">
                          <div
                            class="ml-4">
                            <p
                              class="text-base font-medium ">
                              {{ childlink.title }}
                            </p>
                          </div>
                        </a>
                      {% endfor %}

                    </div>
                  </div>
                </div>
              </div>
            {% else %}
              <div
                class="relative">
                <a
                  href="{{ link.url }}"
                  class="
                  text-base hoverLink text-gray-500
                  rounded-md px-4 py-2
                  {% if link.active == true %}
                    activeLink
                  {% endif %}">
                  {{ link.title }}
                </a>
              </div>
            {% endif %}


          {% endfor %}



        </nav>

        <div
          class="hidden lg:flex items-center justify-end lg:flex-1 space-x-5">
          <button
            type="button"
            class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900 rounded-md px-4 py-2 button-search">
            {% render 'icon-search' %}
          </button>
          <a
            href="{{ routes.cart_url }}"
            class='whitespace-nowrap text-base text-gray-500 hover:text-gray-900
            rounded-md px-4 py-2
            {% if template contains 'cart' %}
              activeLink
            {% endif %}'>
            {% render 'icon-shopping-bag' %}
          </a>

          {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <a
                href="{{ routes.account_url }}">Account</a>
              {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900
               rounded-md px-4 py-2             {% if template contains 'cart' %}
               activeLink
               {% endif %}"' }}
            {% else %}
              <a
                href="{{ routes.account_login_url }}"
                class='text-base text-gray-500 hover:text-gray-900
                rounded-md px-4 py-2
                {% if template == 'customers/login' %}
                  activeLink
                {% endif %}'>Login
              </a>
              <a
                href="{{ routes.account_register_url }}"
                class='text-base text-gray-500 hover:text-gray-900
                rounded-md px-4 py-2
                {% if template == 'customers/register' %}
                  activeLink
                {% endif %}'>Register
              </a>
            {% endif %}
          {% endif %}
        </div>

      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left hidden lg:hidden"
      id="navMobileMenu">
      <div
        class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
        <div class="p-5 divide-y-2 divide-gray-50">

          <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
          <div
            class="flex items-center justify-between pb-3">
            <div>
              <h1
                class="text-lg font-bold">{{ section.settings.mobile_menu_title }}</h1>
            </div>
            <div
              class="-mr-2">
              <button
                id="navMobileMenuButtonClose"
                type="button"
                class=" rounded-md p-2">
                {% render 'icon-close' %}
              </button>
            </div>
          </div>

          <!-- NAVIGATION LINKS FOR MOBILE MENU -->
          <div
            class="pt-3">
            <nav
              class="grid gap-y-7">

              {% for link in main_menu_linklist %}
                {% if link.links != blank %}
                  <div
                    class="relative">
                    <button
                      data-dropdown-mobile-button-id="{{ forloop.index }}"
                      type="button"
                      class="dropdown-button-mobile text-base text-gray-500 hover:text-gray-900 rounded-md flex items-center justify-between w-full">
                      <div>{{ link.title }}</div>
                      {% render 'icon-dropdown' %}
                    </button>

                    <div
                      class="hidden dropdown-content-mobile"
                      data-dropdown-mobile-id="{{ forloop.index }}">
                      {% for childlink in link.links %}
                        <div
                          class=" grid gap-y-7 py-3">
                          <a
                            href="{{ childlink.url }}"
                            class="-m-3 p-3 mt-2 flex items-center rounded-md hoverLink text-gray-500
                            {% if childlink.active == true %}
                              activeLink
                            {% endif %}">
                            <span
                              class="ml-3 text-base font-medium ">{{ childlink.title }}</span>
                          </a>
                        </div>
                      {% endfor %}
                    </div>

                  </div>
                {% else %}
                  <a
                    href="{{ link.url }}"
                    class="-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500
                    {% if link.active == true %}
                      activeLink
                    {% endif %}">
                    {{ link.title }}
                  </a>
                {% endif %}
              {% endfor %}
              <button
                type="button"
                class="-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500 button-search">
                {% render 'icon-search' %}
              </button>
              <a
                href="{{ routes.cart_url }}"
                class='-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500
                {% if template contains 'cart' %}
                  activeLink
                {% endif %}'>
                {% render 'icon-shopping-bag' %}
              </a>
              {% if shop.customer_accounts_enabled %}
                {% if customer %}
                  <a
                    href="{{ routes.account_url }}">Account</a>
                  {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500"' }}
                {% else %}
                  <a
                    href="{{ routes.account_login_url }}"
                    class='-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500
                    {% if template == 'customers/login' %}
                      activeLink
                    {% endif %}'>Login
                  </a>
                  <a
                    href="{{ routes.account_register_url }}"
                    class='-m-3 p-3 flex items-center rounded-md hoverLink text-gray-500
                    {% if template == 'customers/register' %}
                      activeLink
                    {% endif %}'>Register
                  </a>
                {% endif %}
              {% endif %}
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div
    class="hidden w-full absolute top-0 bg-light border  z-20"
    id="search-bar">
    <button
      type="button"
      id="close-search"
      class="absolute top-0 right-0 mr-5 mt-5 text-metal">
      {% render 'icon-close' %}</button>
    <div
      class="h-40 flex justify-center items-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="flex-auto">
        <div
          class="relative text-metal px-10">
          <input
            type="search"
            name="q"
            placeholder="Search"
            class="w-full bg-white h-10 px-8  md:pl-20  border border-dark rounded-full text-sm focus:outline-none">
          <button
            type="submit"
            class="absolute left-0 top-0 mt-2  ml-12 md:ml-20">
            {% render 'icon-search' %}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Navbar",
    "settings": [
      {
        "type": "text",
        "id": "mobile_menu_title",
        "label": "Title",
        "default": "Shop Name",
        "info": "This is title of the mobile menu window"
      }, {
        "type": "text",
        "id": "desktop_menu_title",
        "label": "Title",
        "default": "Shop name",
        "info": "This is title of the desktop menu window"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Header Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}