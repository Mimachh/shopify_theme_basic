<section
  class="bg-white my-8">
  <div
    class="max-w-6xl mx-auto py-8 px-4">

    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div
        class="h-96 md:h-110 mx-auto lg:w-3/4 w-full rounded-xl md:order-1 order-2">
        <div
          class="bg-dark rounded-xl">
          <img
            height="288"
            width="512"
            class="w-full h-96 md:h-110 object-cover -translate-y-1 -translate-x-1 rounded-xl border border-dark"
            src="{{ section.settings.about_image | img_url: 'original' }}"
            alt="{{ section.settings.about_image.alt }}">
        </div>

      </div>
      <div
        class="order-1 md:order-2">
        <h2
          class="title mb-4 mt-2">{{ section.settings.title }}</h2>
        <p
          class="text-metal text-base">{{ section.settings.description }}</p>

        <div
          class="mt-4">
          <a
            href=""
            class="text-primary text-md  hover:text-midnight hover:underline  flex items-center gap-1 group">
            <span
              class="group-hover:translate-x-5 transitionAll">En savoir plus</span>
            <span
              class="group-hover:-translate-x-[115px] transitionAll">{% render 'icon-arrow' %}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "About",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "About us",
        "label": "Title"
      }, {
        "type": "textarea",
        "id": "description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        "label": "Description"
      }, {
        "type": "image_picker",
        "id": "about_image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "About"
      }
    ]
  }
{% endschema %}