<div
  class="flex flex-col items-start my-8">


  <div
    class="max-w-6xl mx-auto">
    <div
      class="mb-4">
      <h1
        class="text-xl text-center md:text-3xl font-medium">{{ section.settings.title }}</h1>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-4 gap-4">
      {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
        {% render 'product-card', product: product %}
      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Featured Collection",
        "label": "Title"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "number_of_products_to_show",
        "min": 4,
        "max": 12,
        "default": 4,
        "label": "Number of products to show"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}