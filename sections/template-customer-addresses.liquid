<div
  class="max-w-6xl mx-auto px-4 py-1">
  <div
    class="flex flex-col md:flex-row items-center justify-between my-5 gap-4">
    <h1
      class="text-2xl font-bold text-metal">Addresses</h1>
    <button
      type="button"
      class="text-light font-medium bg-primary hover:bg-midnight border border-dark transitionAll px-6 py-2"
      id="openAddressModal">Create new address</button>
    <a
      href="{{ routes.account_url }}"
      class="text-primary hover:text-midnight font-medium underline transitionAll">Back to account</a>
  </div>

  <div
    class="hidden h-full w-full fixed inset-0 bg-metal bg-opacity-50 overflow-y-auto z-50"
    id="addressModal">
    <div
      class="relative max-w-md mx-auto bg-light border top-20 p-4">
      <div
        class="flex items-center justify-between mb-4">
        <h2
          class="text-lg font-medium">New address</h2>
        <button
          class="text-metal"
          id="closeAddressModal">{% render 'icon-close' %}</button>
      </div>

      {% form 'customer_address', customer.new_address %}
        <div
          class="mb-4">
          <label
            for="address_fname_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">First name</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[first_name]"
            id="address_fname_{{ form.id }}"
            value="{{ form.first_name }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_lname_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Last name</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[last_name]"
            id="address_lname_{{ form.id }}"
            value="{{ form.last_name }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_company_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Company</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[company]"
            id="address_company_{{ form.id }}"
            value="{{ form.company }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_address1_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Address 1</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[address1]"
            id="address_address1_{{ form.id }}"
            value="{{ form.address1 }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_address2_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Address 2</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[address2]"
            id="address_address2_{{ form.id }}"
            value="{{ form.address2 }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_city_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">City</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[city]"
            id="address_city_{{ form.id }}"
            value="{{ form.city }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_country_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Country</label>
          <select
            data-country-selector
            data-id="{{ form.id }}"
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            name="address[country]"
            id="address_country_{{ form.id }}"
            value="{{ form.country }}">
            {{ all_country_option_tags }}
          </select>
        </div>

        <div
          class="mb-4">
          <label
            for="address_province_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Province</label>
          <select
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            name="address[province]"
            id="address_province_{{ form.id }}"
            value="{{ form.province }}"></select>
        </div>

        <div
          class="mb-4">
          <label
            for="address_zip_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Postal / ZIP code</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="text"
            name="address[zip]"
            id="address_zip_{{ form.id }}"
            value="{{ form.zip }}">
        </div>

        <div
          class="mb-4">
          <label
            for="address_phone_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Phone number</label>
          <input
            class="w-full text-metal border px-4 py-3 focus:outline-none"
            type="tel"
            name="address[phone]"
            id="address_phone_{{ form.id }}"
            value="{{ form.phone }}">
        </div>

        <div
          class="mb-4">
          {{ form.set_as_default_checkbox }}
          <label
            for="address_default_address_{{ form.id }}"
            class="uppercase text-metal text-xs font-medium mb-2">Set as default address</label>
        </div>
        <div
          class="flex flex-row gap-2">
          <button
            type="submit"
            class="border border-dark w-full font-medium text-light bg-primary hover:bg-midnight transitionAll px-4 py-2">Create address</button>
          <button
            type="reset"
            class="border border-dark w-full font-medium text-light bg-danger hover:bg-red-800 transitionAll px-4 py-2">Cancel</button>
        </div>
      {% endform %}
    </div>
  </div>
  <div>
    {% paginate customer.addresses by 10 %}
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-12 p-4 md:p-12">
        {% for address in customer.addresses %}
          <div
            x-data="{ address_{{ address.id }}: false}">
            <div
              class="relative flex flex-col text-center border p-2 border-metal">
              {% if address == customer.default_address %}
                <span
                  class="text-xs font-medium text-dark bg-primaryDark px-4 py-2">Default</span>
              {% endif %}

              <div
                class="my-8 h-full">
                {{ address | format_address }}
              </div>

              <div
                class="flex flex-row gap-2">
                <button
                  x-on:click="address_{{ address.id }} = true"
                  class="border border-dark w-full text-xs text-white bg-primary hover:bg-midnight transitionAll font-medium py-2">Edit</button>

                <button
                  data-delete-address
                  data-url="{{ address.url }}"
                  class="border border-dark w-full text-xs text-white bg-danger hover:bg-red-800 transitionAll font-medium py-2 ">Delete</button>
              </div>

              <form
                action="{{ address.url }}"
                method="post">
                <input
                  type="hidden"
                  name="_method"
                  value="delete">
              </form>
            </div>

            <div
              class="h-full fixed w-full inset-0 bg-metal bg-opacity-50 overflow-y-auto z-50"
              x-show="address_{{ address.id }}"

              id="editAddressModal">
              <div
                class="relative max-w-md mx-auto bg-light border top-20 p-4"
                @click.away="address_{{ address.id }} = false">
                <div
                  class="flex items-center justify-between mb-4">
                  <h2
                    class="text-lg font-medium">Edit address</h2>
                  <button
                    x-on:click="address_{{ address.id }} = false"
                    class="text-metal"
                    id="closeEditAddressModal">{% render 'icon-close' %}</button>
                </div>
                {% form 'customer_address', address %}
