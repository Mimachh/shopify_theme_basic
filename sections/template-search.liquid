<div
  class="container mx-auto">
  {% paginate search.results by 10 %}
    <h1
      class="text-xl my-4 text-center">Search results</h1>

    <div
      class="flex justify-center items-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="border flex">
        <input
          type="search"
          name="q"
          placeholder="Search"
          value="{{ search.terms | escape }}"
          class="px-4 py-2 w-80 border-none">
        <button
          type="submit"
          class="bg-metal text-light border px-4">
          Search</button>
      </form>
    </div>

    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div
          class="max-w-6xl mx-auto">
          <p
            class="text-metal text-center my-10">{{ search.results.size }} results for the search term {{ search.terms | escape }}</p>
          <div
            class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for item in search.results %}
              {% case item.object_type %}
                {% when 'product' %}
                {% render 'product-card', product: item %}
            {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>

      {% else %}
        <div
          class="text-center my-4">
          <p>No results found for the search term: {{ search.terms }}. Try to use a different keyword.
          </p>
        </div>
      {% endif %}
    {% endif %}


    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>