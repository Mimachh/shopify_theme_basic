<div
  class="max-w-md">
  <div
    class="font-bold text-5xl my-4">
    {{ section.settings.title }}
  </div>

  <div>
    <p
      class="text-base md:text-xl leading-normal">
      {{ section.settings.subtext_title }}
    </p>
  </div>

  <div
    class="my-6">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{ shop_url }}"
      class="px-6 inline py-3 text-base font-medium shadow bg-primary 
                                      border border-transparent hover:bg-light hover:text-primary hover:border-primary text-light rounded-lg
                                      transition-colors duration-150 ease
                                      ">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>


{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"
      }, {
        "type": "text",
        "id": "subtext_title",
        "default": "The page that you're looking for is not found",
        "label": "404 Subtext Title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to homepage",
        "label": "Button Label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}